<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/postsFragment">
    <fragment
        android:id="@+id/postsFragment"
        android:name="rutledge.james.jsonplaceholderapp.UI.view.PostsFragment"
        android:label="PostsFragment">
        <action
            android:id="@+id/viewPost"
            app:destination="@id/detailedPostFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/detailedPostFragment"
        android:name="rutledge.james.jsonplaceholderapp.UI.view.DetailedPostFragment"
        android:label="DetailedPostFragment" />
</navigation>